<div class="page-header">
  <h1>Show post</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @post.title %></dd>
  <dt>Content:</dt>
  <dd><%= @post.content %></dd>
</dl>

<%= link_to posts_path, class: 'btn btn-default' do %>
  All Posts
<% end %>
<%= link_to edit_post_path(@post), class: 'btn btn-primary' do %>
  Edit
<% end %>