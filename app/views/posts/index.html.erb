
  <%= cl_image_tag("samples/people/smiling-man", width: 150, height: 150, crop: :thumb, gravity: :face) %>

  <img src="<%= cl_image_path("samples/people/smiling-man", width: 150, height: 150, crop: :thumb, gravity: :face) %>">
<div class="row">
  <div class="col-sm-6">
    <h1>Posts</h1>
  </div>



  <div class="col-sm-6 text-end">
  <%= link_to new_post_path, class: 'btn btn-primary' do %>
    Add New Post
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Title</th>
            <th>Content</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <%= content_tag :tr, id: dom_id(post), class: dom_class(post) do %>
          

                      <td><%= post.title %></td>
                      <td><%= post.content %></td>
          
          
            <td><%= link_to 'Show', post %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
